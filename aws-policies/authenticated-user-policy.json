{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowUserProfileAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-users-dev",
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-properties-dev"
      ],
      "Condition": {
        "StringEquals": {
          "dynamodb:LeadingKeys": ["${cognito-identity.amazonaws.com:sub}"]
        }
      }
    },
    {
      "Sid": "AllowPropertyReadAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-properties-dev"
      ]
    },
    {
      "Sid": "AllowS3ReadAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::block-immo-assets-dev",
        "arn:aws:s3:::block-immo-assets-dev/*"
      ]
    },
    {
      "Sid": "AllowS3WriteAccess",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::block-immo-assets-dev/users/${cognito-identity.amazonaws.com:sub}/*",
        "arn:aws:s3:::block-immo-assets-dev/properties/*"
      ]
    },
    {
      "Sid": "AllowCognitoSync",
      "Effect": "Allow",
      "Action": [
        "cognito-sync:*"
      ],
      "Resource": [
        "arn:aws:cognito-sync:eu-west-3:*:identitypool/*"
      ]
    },
    {
      "Sid": "AllowMobileAnalytics",
      "Effect": "Allow",
      "Action": [
        "mobileanalytics:PutEvents"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "AllowCognitoIdentity",
      "Effect": "Allow",
      "Action": [
        "cognito-identity:GetCredentialsForIdentity",
        "cognito-identity:GetId",
        "cognito-identity:GetOpenIdToken"
      ],
      "Resource": [
        "arn:aws:cognito-identity:eu-west-3:*:identitypool/*"
      ]
    }
  ]
} 