{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowInvestorReadProperties",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:Query"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-properties-dev"
      ]
    },
    {
      "Sid": "AllowInvestorOwnProfile",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-users-dev"
      ]
    },
    {
      "Sid": "AllowS3ReadOnly",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::block-immo-assets-dev/properties/*",
        "arn:aws:s3:::block-immo-assets-dev/users/*"
      ]
    },
    {
      "Sid": "AllowCognitoSync",
      "Effect": "Allow",
      "Action": [
        "cognito-sync:ListDatasets",
        "cognito-sync:DescribeDataset",
        "cognito-sync:GetRecords",
        "cognito-sync:UpdateRecords"
      ],
      "Resource": [
        "arn:aws:cognito-sync:eu-west-3:*:identitypool/*/dataset/*"
      ]
    }
  ]
} 