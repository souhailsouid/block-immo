{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowDynamoDBAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-users-dev",
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-properties-dev"
      ]
    },
    {
      "Sid": "AllowS3Access",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::block-immo-assets-dev",
        "arn:aws:s3:::block-immo-assets-dev/*"
      ]
    },
    {
      "Sid": "AllowCognitoSync",
      "Effect": "Allow",
      "Action": [
        "cognito-sync:*"
      ],
      "Resource": [
        "arn:aws:cognito-sync:eu-west-3:*:identitypool/*"
      ]
    },
    {
      "Sid": "AllowMobileAnalytics",
      "Effect": "Allow",
      "Action": [
        "mobileanalytics:PutEvents"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
} 