{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowProfessionalFullPropertyAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-properties-dev"
      ]
    },
    {
      "Sid": "AllowProfessionalUserManagement",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-3:*:table/block-immo-users-dev"
      ]
    },
    {
      "Sid": "AllowProfessionalS3FullAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::block-immo-assets-dev",
        "arn:aws:s3:::block-immo-assets-dev/*"
      ]
    },
    {
      "Sid": "AllowProfessionalCognitoAccess",
      "Effect": "Allow",
      "Action": [
        "cognito-idp:AdminGetUser",
        "cognito-idp:AdminListUsers",
        "cognito-idp:AdminUpdateUserAttributes",
        "cognito-idp:AdminDisableUser",
        "cognito-idp:AdminEnableUser"
      ],
      "Resource": [
        "arn:aws:cognito-idp:eu-west-3:*:userpool/*"
      ]
    },
    {
      "Sid": "AllowProfessionalCloudWatch",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:GetMetricData",
        "cloudwatch:GetMetricStatistics",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams",
        "logs:GetLogEvents"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
} 